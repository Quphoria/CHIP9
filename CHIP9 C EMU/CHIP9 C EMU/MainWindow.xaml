                </Frame.Content>
            </Frame>
            <Frame x:Name="SIN_Frame" HorizontalAlignment="Left" Height="40" Margin="0,160,0,0" VerticalAlignment="Top" Width="100" VerticalContentAlignment="Center" Background="#FFDDDDDD" BorderBrush="#FF4F4F4F" BorderThickness="2">
